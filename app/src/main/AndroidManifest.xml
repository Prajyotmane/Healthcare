<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.prajyotmane.healthcare">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".WelcomePage"></activity>
        <activity
            android:name=".MyAppointments"
            android:label="@string/appointments" />
        <activity
            android:name=".ConfirmSlot"
            android:label="@string/confirm" />
        <activity
            android:name=".BookAppointment"
            android:label="@string/book_appointment" />
        <activity
            android:name=".DoctorDetailInfo"
            android:label="@string/details" />
        <activity
            android:name=".DoctorList"
            android:label="@string/doctors" />
        <activity
            android:name=".UserInfoUpdate"
            android:label="@string/edit"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".HomePage"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RegisterActivity"
            android:label="@string/register" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DoctorAppointment"></activity>
        <activity android:name=".DoctorInfoUpdate" />
        <activity android:name=".DoctorLogin" />
        <activity android:name=".DoctorRegistration" />
        <activity
            android:name=".DoctorNavigationActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>